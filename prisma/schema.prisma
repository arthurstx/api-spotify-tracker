generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum TimeRange {
  SHORT_TERM
  MEDIUM_TERM
  LONG_TERM
}

model User {
  id          String  @id @default(uuid())
  spotifyId   String  @unique
  displayName String
  email       String?
  imageUrl    String?

  accessToken    String
  refreshToken   String
  tokenExpiresAt DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  snapshots Snapshot[]
}

model Artist {
  id        String  @id @default(uuid())
  spotifyId String  @unique
  name      String
  imageUrl  String?

  createdAt DateTime @default(now())

  trackArtists   TrackArtist[]
  artistRankings ArtistRanking[]
}

model Track {
  id         String  @id @default(uuid())
  spotifyId  String  @unique
  name       String
  imageUrl   String?
  durationMs Int

  createdAt DateTime @default(now())

  trackArtists  TrackArtist[]
  trackRankings TrackRanking[]
}

model TrackArtist {
  trackId  String
  artistId String

  track  Track  @relation(fields: [trackId], references: [id])
  artist Artist @relation(fields: [artistId], references: [id])

  @@id([trackId, artistId])
}

model Snapshot {
  id     String   @id @default(uuid())
  userId String
  date   DateTime

  user User @relation(fields: [userId], references: [id])

  artistRankings ArtistRanking[]
  trackRankings  TrackRanking[]

  createdAt DateTime @default(now())

  @@unique([userId, date])
}

model ArtistRanking {
  id         String @id @default(uuid())
  snapshotId String
  artistId   String

  position  Int
  timeRange TimeRange

  snapshot Snapshot @relation(fields: [snapshotId], references: [id])
  artist   Artist   @relation(fields: [artistId], references: [id])

  @@unique([snapshotId, artistId, timeRange])
}

model TrackRanking {
  id         String @id @default(uuid())
  snapshotId String
  trackId    String

  position  Int
  timeRange TimeRange

  snapshot Snapshot @relation(fields: [snapshotId], references: [id])
  track    Track    @relation(fields: [trackId], references: [id])

  @@unique([snapshotId, trackId, timeRange])
}
